@using gunes_ticarett.Models.Entity
@model List<tbl_kategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered ">
    <tr>
        <th>KATEGORİ İD</th>
        <th>KATEGORİ AD</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    <tbody>
        @foreach (var ktgr in Model)
        {
            <tr>
                <td>@ktgr.kategori_id</td>
                <td>@ktgr.kategori_ad</td>
                <td> <a href="/Kategori/sil/@ktgr.kategori_id" class="btn btn-danger">SİL</a></td>
                <td> <a href="/Kategori/KategoriGetir/@ktgr.kategori_id" class="btn btn-success">GÜNCELLE</a> </td>
            </tr>
        }

    </tbody>
    
</table>
<a href="/Kategori/YeniKategori/" class="btn btn-primary">YENİ KATEGORİ EKLE</a>



